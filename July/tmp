#include <stdio.h>

char	*ft_strrev(char *str)
{
	int		i;
	int		length;
	char	char_swp;

	i = 0;
	length = 0;
	while (str[length])
		length++;
	length--;
	while (i <= length)
	{
		char_swp = str[i];
		str[i] = str[length];
		str[length] = char_swp;
		i++;
		length--;
	}
	return (str);
}

int		main(int ac, char*av[])
{
	(void)ac;
	(void)av;
	char str[] = "abc"; 
	char str2[] = "abcd"; 

	printf("%s\n", ft_strrev(str));
	printf("%s", ft_strrev(str2));
	return 0;
}
